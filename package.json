{
  "name": "vangard-renpy-renide",
  "version": "0.4.4",
  "type": "module",
  "main": "electron.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:debug": "vite build --mode development",
    "preview": "vite preview",
    "electron:start": "npm run build && electron .",
    "dist": "npm run build && electron-builder",
    "version:patch": "node version.js patch",
    "version:minor": "node version.js minor",
    "version:major": "node version.js major",
    "version:set": "node version.js set",
    "release:patch": "npm run version:patch && npm run build",
    "release:minor": "npm run version:minor && npm run build",
    "release:major": "npm run version:major && npm run build"
  },
  "dependencies": {
    "@google/genai": "^0.12.0",
    "@monaco-editor/react": "^4.6.0",
    "immer": "^10.1.1",
    "use-immer": "^0.10.0",
    "jszip": "^3.10.1",
    "monaco-editor": "^0.45.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "electron": "^29.1.5",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  },
  "build": {
    "appId": "com.vangard.renpy.renide",
    "productName": "Vangard Ren'Py Ren'IDE",
    "files": [
      "dist/**/*",
      "electron.js",
      "preload.js",
      "vangard-renide-512x512.png"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "vangard-renide-512x512.png",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Ren'Py Visual Editor"
    },
    "mac": {
      "target": "dmg",
      "icon": "vangard-renide-512x512.png",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "linux": {
      "target": "AppImage",
      "icon": "vangard-renide-512x512.png",
      "artifactName": "${productName}-${version}.${ext}"
    }
  }
}
